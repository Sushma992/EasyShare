<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make sure the images are upward orientated, as supported by Image OCR."
     android:id="@+id/textViewusermanual"
        android:textSize="15dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Camera focus mode set to “macro” or “auto” mode to enhance OCR result."
        android:id="@+id/textViewusermanua2"
        android:textSize="15dp"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Put the FLASH OFF to avoid glare of the image capture."
       android:id="@+id/textViewusermanua3"
        android:textSize="15dp"
        android:layout_below="@+id/textView12"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Step-1"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/textView6"

          />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Step-2"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:id="@+id/textView11"
        android:layout_below="@+id/textViewusermanual"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="22dp"
        android:text="Step-3"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:id="@+id/textView12"
        android:layout_below="@+id/textViewusermanua2"
       />
</RelativeLayout>