<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.sushma.easyshare.Payment"
    android:background="@drawable/back1"
    >

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Send IOU"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/border1"
        android:id="@+id/sendiou"
        android:layout_alignTop="@+id/paybutton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="SETTLE UP"
        android:onClick="pay"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/border1"
        android:id="@+id/paybutton"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editTextphno"
               android:hint="Mobile"
        android:textColorHint="#3f51b5"
        android:layout_marginTop="150dp"
        android:background="#ffffff" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/editTextname"
           android:drawableRight="@drawable/contact"
        android:hint="Name"
        android:textColorHint="#3f51b5"
        android:layout_marginTop="80dp"
        android:background="#ffffff" />

    <Button
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:text=" "
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/buttoncontact"
               android:onClick="openContacts"
        android:layout_alignTop="@+id/editTextname"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>